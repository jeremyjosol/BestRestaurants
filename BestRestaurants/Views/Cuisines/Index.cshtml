@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added.</h3>
} 

<div class="table-container">
  <table>
    <thead>
      <tr>
      </tr>
    </thead>
    <tbody>
      @foreach (Cuisine cuisine in Model)
      {
        <tr>
          <td>@Html.ActionLink($"View All {@cuisine.Type}", "Details", new { id = cuisine.CuisineId })</td>
        </tr>
      }
    </tbody>
  </table>
</div>

<div class="cuisines">
  @Html.ActionLink("Add new cuisine", "Create")
</div>

<div class="restaurants">
  @Html.ActionLink("Add new restaurant", "Create", "Restaurants")
</div>