@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added.</h3>
} 

<h1>Cuisines</h1>
    
@foreach (Cuisine cuisine in Model)
{
  <div class="cuisines">
    @Html.ActionLink($"View All {@cuisine.Type}", "Details", new { id = cuisine.CuisineId })
  </div>
}

