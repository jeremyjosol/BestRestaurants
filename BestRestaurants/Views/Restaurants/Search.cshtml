@{
    Layout = "_Layout";
}

@using BestRestaurants.Models;

@if (@Model.Count == 0)
{
  <h2>No restaurants have been found.</h2>
} 

@foreach (Restaurant restaurant in Model)
{
  <h1>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId })</h1>
}
<br />
@Html.ActionLink("Back to Search", "Index")